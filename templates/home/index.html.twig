{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <!--  BEGIN NAVBAR  -->
    <div class="header-container">
        <header class="header navbar navbar-expand-sm">
            <div class="nav-logo align-self-center">
                <a class="navbar-brand" href="#"><img src="{{ asset('images/logo.png') }}" /> <span class="navbar-brand-name">CoronaNews</span></a>
            </div>
        </header>
    </div>
    <!--  END NAVBAR  -->

    <!--  BEGIN MAIN CONTAINER  -->
    <div class="main-container" id="container">

        <div class="overlay"></div>
        <div class="search-overlay"></div>

        <!--  BEGIN CONTENT AREA  -->
        <div id="content" class="main-content">
            <div class="layout-px-spacing mb-5">

                <div class="page-header">
                    <div class="page-title">
                        <h3>Vue d'ensemble des cas dans le monde par pays</h3>
                    </div>
                </div>

                <!-- CONTENT AREA -->


                <div class="row layout-top-spacing">
                    <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-6 layout-spacing">
                        <div class="nopadding col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="widget widget-one_hybrid widget-followers">
                                <div class="widget-heading">
                                    <h5>Pays</h5>
                                </div>
                                <div class="widget-content">
                                    <div class = "col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 pb-3">
                                        <form id="form" method="post" action="{{ path('home') }}">

                                            <select id = 'select' class="form-control basic" name='option'>
                                                {% for option in countries %}
                                                    <option class="option" value="{{ option }}">{{ option }}</option>
                                                {% endfor %}
                                            </select>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8 col-lg-8 col-md-6 col-sm-6 col-6 layout-spacing">
                        <div class="row widget-statistic">
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                                <div class="widget widget-one_hybrid widget-followers">
                                    <div class="widget-heading">
                                        <div class="col-12">
                                            <div class="row">
                                        <div class="col-6">
                                            <h5 class="">Infectés</h5>
                                            <p id = 'report' class="w-value">{{ infected }}</p>
                                        </div>
                                        <div class="col-6 pull-right">
                                            <img class="float-right" src="{{ asset('images/corona-icon.svg') }}"/>
                                        </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="widget-content">
                                        <div class="w-chart">
                                            <div id="hybrid_followers"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                                <div class="widget widget-one_hybrid widget-referral">
                                    <div class="widget-heading">
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-6">
                                                    <h5 class="">Guéris</h5>
                                                    <p id = 'recover' class="w-value">{{ recovered }}</p>
                                                </div>
                                                <div class="col-6 pull-right">
                                                    <img class="float-right" src="{{ asset('images/recovered.svg') }}"/>
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                    <div class="widget-content">
                                        <div class="w-chart">
                                            <div id="hybrid_followers1"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                                <div class="widget widget-one_hybrid widget-engagement">
                                    <div class="widget-heading">
                                        <div class="col-12">
                                            <div class="row">
                                                <div class="col-6">
                                                    <h5 class="">Taux de létalité</h5>
                                                    <p id = 'death' class="w-value">{{ deaths | round(2, 'floor') }} %</p>
                                                </div>
                                                <div class="col-6 pull-right">
                                                    <img class="float-right" style="width: 42px" src="{{ asset('images/cancel.svg') }}"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 layout-spacing">
                        <div class="widget widget-chart-three">
                            <div class="widget-heading">
                                <div class="">
                                    <h5 class="">Cas atteints du COVID-19</h5>
                                </div>
                            </div>

                            <div class="widget-content">
                                <div id="cases-stats"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 layout-spacing">
                        <div class="widget widget-chart-three">
                            <div class="widget-heading">
                                <div class="">
                                    <h5 class="">Personnes guéris et décédés du COVID-19</h5>
                                </div>
                            </div>

                            <div class="widget-content">
                                <div id="recoverdeath-stats"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing">
                        <div class="widget-content widget-content-area br-6">
                            <div class="widget-heading">
                                <div class="">
                                    <h5 class="">Statistiques par pays</h5>
                                </div>
                            </div>
                            <div class="table-responsive mb-4 mt-4">
                                <table id="zero-config" class="table table-hover" style="width:100%;display: none">
                                    <thead>
                                    <tr>
                                        <th>Pays</th>
                                        <th>Cas confirmés</th>
                                        <th>Morts</th>
                                        <th>Guéris</th>
                                        <th>Taux de mortalité ( % )</th>
                                    </tr>
                                    </thead>
                                    <tbody id ='tbody'>
                                    {% for i in data %}
                                    <tr>
                                        <td>{{ i.0 }}</td>
                                        <td>{{ i.confirmed }}</td>
                                        <td>{{ i.deaths }}</td>
                                        <td>{{ i.recovered }}</td>
                                        <td>{{ (i.deaths / i.confirmed * 100) | round(2, 'floor') }} %</td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
{#                                {{ knp_pagination_render(data) }}#}
                            </div>
                        </div>
                    </div>
                    <div class = 'col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 layout-spacing'>
                        <div class="page-title">
                            <h3>Actualités du jour</h3>
                        </div>
                    </div>
                    {% for article in articles.articles|slice(0, 3) %}
                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12">
                            <div class="card h-100 component-card_9">
                                <img id = 'img1' src="{{ article.urlToImage }}" style="width: 100%;height: 15vw;object-fit: cover;" class="card-img-1" alt="widget-card-2">
                                <div class="card-body d-flex flex-column">
                                    <p id = 'date1' class="meta-date">{{ article.publishedAt|date("d/m/Y - H:i:s") }}</p>

                                    <h5 id = 'title1' class="card-title">{{ article.title }}</h5>
                                    <p id = 'text1' class="card-text">{{ article.description }}</p>

                                    <div class="meta-info" style="margin-bottom: 10px">
                                        <div class="meta-user">
                                            <div  id= 'author1' class="user-name">{{ article.author }}</div>
                                        </div>
                                    </div>
                                    <a id = 'link1' class="btn btn-outline-success mt-auto" href="{{ article.url }}" target = '_blank'>Lire la suite</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>


            <!-- CONTENT AREA -->
            <div class="footer-wrapper">
                <div class="footer-section f-section-1">
                    <p class="">Ynov 48h challenge</p>
                </div>
                <div class="footer-section f-section-2">
                    <p class="">Coded with <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg></p>
                </div>
            </div>
        </div>
        <!--  END CONTENT AREA  -->

    </div>
    <!-- END MAIN CONTAINER -->

    <script>
        $(document).ready(function(){
            $('#zero-config').DataTable({
                "oLanguage": {
                    "oPaginate": { "sPrevious": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>', "sNext": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>' },
                    "sInfo": "Page _PAGE_ sur _PAGES_",
                    "sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
                    "sSearchPlaceholder": "Rechercher...",
                    "sLengthMenu": "Résultats :  _MENU_",
                },
                "stripeClasses": [],
                "lengthMenu": [10, 20, 30, 50],
                "pageLength": 10
            });
            $('.dataTables_length').addClass('bs-select');
            $('#zero-config').show();
            var data = {{ stats|json_encode|raw }};
            confirmed = [];
            date = [];
            recovered = [];
            death = [];
            $.each(data, function( index, value ) {
                date.push(value.date);
                confirmed.push(value.confirmed);
                recovered.push(value.recovered);
                death.push(value.deaths);
            });



            var d_1options1 = {
                chart: {
                    id: 'chart1',
                    height: 400,
                    type: 'area',
                    zoom: {
                        enabled: true,
                        type: 'xy',
                    },
                    dropShadow: {
                        enabled: true,
                        top: 1,
                        left: 1,
                        blur: 1,
                        color: '#515365',
                        opacity: 0.3,
                    }
                },
                colors: ['#357ffa'],
                dataLabels: {
                    enabled: false
                },
                legend: {
                    position: 'bottom',
                    horizontalAlign: 'center',
                    fontSize: '14px',
                    markers: {
                        width: 10,
                        height: 10,
                    },
                    itemMargin: {
                        horizontal: 0,
                        vertical: 8
                    }
                },
                grid: {
                    borderColor: '#191e3a',
                },
                stroke: {
                    show: true,
                    width: 2,
                    colors: ['transparent']
                },
                series: [{
                    name: 'Infectés',
                    data: confirmed
                }],
                xaxis: {
                    type: 'datetime',
                    categories: date,
                },
                fill: {
                    type: 'gradient',
                    gradient: {
                        shade: 'light',
                        type: 'vertical',
                        shadeIntensity: 0.3,
                        inverseColors: false,
                        opacityFrom: 1,
                        opacityTo: 0.8,
                        stops: [0, 100]
                    }
                },
                tooltip: {
                    theme: 'dark',
                    y: {
                        formatter: function(val) {
                            return val
                        }
                    }
                }
            }

            var chart = new ApexCharts(document.querySelector("#cases-stats"), d_1options1);

            chart.render();

            var d_1options2 = {
                chart: {
                    id: 'chart2',
                    height: 400,
                    type: 'area',
                    zoom: {
                        enabled: true,
                        type: 'xy',
                    },
                    dropShadow: {
                        enabled: true,
                        top: 1,
                        left: 1,
                        blur: 1,
                        color: '#515365',
                        opacity: 0.3,
                    }
                },
                colors: ['#8B0000', '#BFFF00'],
                plotOptions: {
                    bar: {
                        horizontal: false,
                        columnWidth: '55%',
                        endingShape: 'rounded'
                    },
                },
                dataLabels: {
                    enabled: false
                },
                legend: {
                    position: 'bottom',
                    horizontalAlign: 'center',
                    fontSize: '14px',
                    markers: {
                        width: 10,
                        height: 10,
                    },
                    itemMargin: {
                        horizontal: 10,
                        vertical: 8
                    }
                },
                grid: {
                    borderColor: '#191e3a',
                },
                stroke: {
                    show: true,
                    width: 2,
                    colors: ['transparent']
                },
                series: [{
                    name: 'Nombre de décés',
                    data: death
                }, {
                    name: 'Nombre de patients guéris',
                    data: recovered
                }],
                xaxis: {
                    type: 'datetime',
                    categories: date,
                },
                fill: {
                    type: 'gradient',
                    gradient: {
                        shade: 'dark',
                        type: 'vertical',
                        shadeIntensity: 0.3,
                        inverseColors: false,
                        opacityFrom: 1,
                        opacityTo: 0.8,
                        stops: [0, 100]
                    }
                },
                tooltip: {
                    theme: 'dark',
                    y: {
                        formatter: function(val) {
                            return val
                        }
                    }
                }
            }

            chart = new ApexCharts(document.querySelector("#recoverdeath-stats"), d_1options2);

            chart.render();

            $( "#select" ).change(function() {

                let country = $(this).children("option:selected").val();

                $.ajax({
                    url : '{{ path('changeCountry') }}',
                    type : 'POST',
                    data : {country: country},
                    success: function (data) {
                        $('#report').text(data.infected);
                        $('#recover').text(data.recovered);
                        $('#death').text(data.fatality+' %');
                        var data = data.data;
                        confirmed = [];
                        date = [];
                        recovered = [];
                        death = [];
                        $.each(data, function( index, value ) {
                            date.push(value.date);
                            confirmed.push(value.confirmed);
                            recovered.push(value.recovered);
                            death.push(value.deaths);
                        });
                        ApexCharts.exec('chart1', "updateSeries", [{
                            data: confirmed
                        }]);
                        ApexCharts.exec('chart2', "updateSeries", [{
                            data: death
                        }, {
                            data: recovered
                        }]);

                    },

                });
            });

        });
    </script>

{% endblock %}
